{
  "arrowParens": "avoid",
  "importOrder": ["^\\.\\./", "^\\./"],
  "importOrderSortSpecifiers": true,
  "overrides": [{ "files": "*.ts", "options": { "parser": "typescript" } }],
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "printWidth": 120,
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false
}
