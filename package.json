{
  "name": "npm-check-updates",
  "version": "11.8.2",
  "author": "Tomas Junnonen <tomas1@gmail.com>",
  "license": "Apache-2.0",
  "contributors": [
    "Raine Revere (https://github.com/raineorshine)"
  ],
  "description": "Find newer versions of dependencies than what your package.json allows",
  "keywords": [
    "npm",
    "check",
    "find",
    "discover",
    "updates",
    "upgrades",
    "dependencies",
    "package.json",
    "updater",
    "version",
    "management",
    "ncu"
  ],
  "preferGlobal": true,
  "engines": {
    "node": ">=10.17"
  },
  "eslintConfig": {
    "extends": [
      "raine"
    ]
  },
  "main": "./lib",
  "scripts": {
    "build": "node scripts/build.js",
    "lint": "cross-env FORCE_COLOR=1 npm-run-all --parallel --aggregate-output lint:*",
    "lint:lockfile": "lockfile-lint",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore node_modules --config .markdownlint.js",
    "lint:src": "eslint --cache --cache-location node_modules/.cache/.eslintcache --report-unused-disable-directives .",
    "nyc": "nyc",
    "test": "mocha test test/package-managers/npm test/package-managers/yarn && mocha --exit test/timeout",
    "watch": "chokidar \"lib/**/*.js\" -c \"npm run test\"",
    "ncu": "node ./bin/cli.js"
  },
  "bin": {
    "npm-check-updates": "bin/cli.js",
    "ncu": "bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raineorshine/npm-check-updates.git"
  },
  "homepage": "https://github.com/raineorshine/npm-check-updates",
  "bugs": {
    "url": "https://github.com/raineorshine/npm-check-updates/issues"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "cint": "^8.2.1",
    "cli-table": "^0.3.6",
    "commander": "^6.2.1",
    "fast-memoize": "^2.5.2",
    "find-up": "5.0.0",
    "fp-and-or": "^0.1.3",
    "get-stdin": "^8.0.0",
    "globby": "^11.0.4",
    "hosted-git-info": "^4.0.2",
    "json-parse-helpfulerror": "^1.0.3",
    "jsonlines": "^0.1.1",
    "libnpmconfig": "^1.2.1",
    "lodash": "^4.17.21",
    "minimatch": "^3.0.4",
    "p-map": "^4.0.0",
    "pacote": "^11.3.4",
    "parse-github-url": "^1.0.2",
    "progress": "^2.0.3",
    "prompts": "^2.4.1",
    "rc-config-loader": "^4.0.0",
    "remote-git-tags": "^3.0.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "semver-utils": "^1.1.4",
    "spawn-please": "^1.0.0",
    "update-notifier": "^5.1.0"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-string": "^1.5.0",
    "chokidar-cli": "^2.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.29.0",
    "eslint-config-raine": "^0.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^35.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.0",
    "lockfile-lint": "^4.6.2",
    "markdownlint-cli": "^0.27.1",
    "mocha": "^8.4.0",
    "mock-require": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "should": "^13.2.3",
    "strip-ansi": "^6.0.0",
    "yarn": "^1.22.10"
  },
  "files": [
    "bin",
    "lib"
  ],
  "lockfile-lint": {
    "allowed-schemes": [
      "https:"
    ],
    "allowed-hosts": [
      "npm"
    ],
    "empty-hostname": false,
    "type": "npm ",
    "path": "package-lock.json"
  },
  "mocha": {
    "check-leaks": true,
    "trace-deprecation": true,
    "trace-warnings": true,
    "use_strict": true
  },
  "nyc": {
    "reporter": [
      "html",
      "lcov",
      "text-summary"
    ]
  }
}
